<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_medium">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/userProfileImg"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/circle"/>

        <LinearLayout
            android:id="@+id/layout_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_marginStart="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/comment_user"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="hesham elnemr"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_xmedium"
                    android:textStyle="bold"
                    android:layout_weight="9"/>

                <TextView
                    android:id="@+id/comment_date"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="12/20/2019"
                    android:textSize="@dimen/text_size_xmedium"
                    android:textColor="#4CAF50"
                    android:layout_marginTop="@dimen/margin_small"/>

                <!--  <ImageView
                      android:padding="5dp"
                      android:id="@+id/deletecard"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:layout_weight="1"
                      android:src="@drawable/ic_clear_blue_700_24dp"/>
-->
              </LinearLayout>


              <TextView
                  android:id="@+id/full_comment"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="thankthankthankthankthankthankthankthankthankthankthankthankthankthankthankthankthankthankthankthankthankthank"
                  android:textSize="@dimen/text_size_small"/>



          </LinearLayout>
      </LinearLayout>

      <View android:layout_width="match_parent"
          android:layout_height="@dimen/view_width_small"
          android:background="@color/grey_light"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"/>
  </LinearLayout>